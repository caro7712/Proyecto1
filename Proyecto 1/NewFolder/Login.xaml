<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_1.NewFolder.Login"
             BackgroundColor="#BFACAC"
             Title="Login">
                 
        <VerticalStackLayout>

        <Image Margin="0,10" Source="dotnet_bot.png" WidthRequest="260" />

        <Label Text="Control de Acceso App" FontSize="Large"/>

        <Label Text="Ingresar Email" TextColor="#81595E"/>
        <Entry x:Name="emailEntry" Placeholder="Email"/>

        <Label Text="Ingresar Password" TextColor="#81595E"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>

        <HorizontalStackLayout Margin="0,20" HorizontalOptions="CenterAndExpand" BackgroundColor="#D9D9D9">
            <Button x:Name="btnIngresar" Clicked="btnIngresar_Clicked" Text="Ingresar" Margin="0,5"/>
            <Button x:Name="btnRegistrar" Clicked="btnRegistrar_Clicked" Text="Registrar"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>